<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <section>
        <nav>
            <h2>We Menu</h2>
        </nav>

        <!-- recommends menu -->
        <div class="recipes-container">
            <%menus.forEach(e => {%>
            <%if(e.tag){%>
            <div class="recipes-box">
                <div class="content">
                    <h2><%=e.menu%></h2>
                    <h3><%=e.price%>฿ 
                        <%if(e.tag){%>
                        <span><%=e.tag%></span>
                        <%}%>
                    </h3>
                </div>
                <img src=<%=e.image%>>
            </div>
            <%}%>

            <%});%>

            <!-- other menu -->
            <%menus.forEach(e => {%>
                <%if(!e.tag){%>
                <div class="recipes-box">
                    <div class="content">
                        <h2><%=e.menu%></h2>
                        <h3><%=e.price%>฿ 
                            <%if(e.tag){%>
                            <span><%=e.tag%></span>
                            <%}%>
                        </h3>
                    </div>
                    <img src=<%=e.image%>>
                </div>
                <%}%>
    
                <%});%>


        </div>

    </section>
</body>
</html>
